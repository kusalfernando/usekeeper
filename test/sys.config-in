[{usekeeper,
      []},
{inets,
      [{services,
         [{httpd,
            [{server_name, "ct.usekeeper.org"},
               {directory_index, ["index.html"]},
               {directory, {"/",
                     [{auth_type, mnesia},
                     {auth_name, "ct.usekeeper.org"},
                     {require_group, ["all"]}]}},
              {modules, [mod_alias,
                  mod_auth,
                  mod_responsecontrol,
                  mod_get,
                  mod_usekeeper_rest_accepted_content,
                  mod_usekeeper_rest_post,
                  mod_disk_log]},
               {port, %HTTP_PORT%},
               {socket_type, {essl,
                     [{certfile, "%CERT_DIR%/cert.pem"},
                     {keyfile, "%CERT_DIR%/key.pem"}]}},
               {server_root, "%SERVER_ROOT%"},
               {document_root, "%APP_PRIV%/www"}]}]}]}].
